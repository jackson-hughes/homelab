---
services:
  gluetun:
    image: qmcgaw/gluetun
    container_name: gluetun
    cap_add:
      - NET_ADMIN
    devices:
      - /dev/net/tun:/dev/net/tun
    network_mode: bridge
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
    ports:
      - 6789:6789/tcp # NZBGet
      - 7878:7878/tcp # Radarr
      - 8989:8989/tcp # Sonarr
      - 9696:9696/tcp # Prowlarr
    environment:
      - VPN_SERVICE_PROVIDER=mullvad
      - VPN_TYPE=wireguard
      - WIREGUARD_PRIVATE_KEY={{ mullvad_wireguard_private_key }}
      - WIREGUARD_ADDRESS=10.74.209.255/32
      - SERVER_CITIES=Glasgow
      - DNS_PLAINTEXT_ADDRESS=192.168.1.1
      - FIREWALL=on
      - EXTRA_SUBNETS=192.168.1.0/24
    restart: unless-stopped
  nzbget:
    image: linuxserver/nzbget
    container_name: nzbget
    network_mode: "service:gluetun"
    environment:
      - TZ=Europe/London
      - PUID=1201
      - PGUD=1200
    volumes:
      - ./nzbget/config:/config
      - /data/plex-media/downloads:/downloads
    depends_on:
      - gluetun
    restart: unless-stopped
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    network_mode: "service:gluetun"
    environment:
      - TZ=Europe/London
      - PUID=1203
      - PGUD=1200
    volumes:
      - ./sonarr/data:/config
      - /data/plex-media/tv:/tv
      - /data/plex-media/downloads:/downloads
    depends_on:
      - gluetun
    restart: unless-stopped
  radarr:
    image: linuxserver/radarr
    container_name: radarr
    network_mode: "service:gluetun"
    environment:
      - TZ=Europe/London
      - PUID=1202
      - PGUD=1200
    volumes:
      - ./radarr/data:/config
      - /data/plex-media/movies:/movies
      - /data/plex-media/downloads:/downloads
    depends_on:
      - gluetun
    restart: unless-stopped
  prowlarr:
    image: linuxserver/prowlarr
    container_name: prowlarr
    network_mode: "service:gluetun"
    environment:
      - TZ=Europe/London
      - PUID=1204
      - PGUD=1200
    volumes:
      - ./prowlarr:/config
    depends_on:
      - gluetun
    restart: unless-stopped
