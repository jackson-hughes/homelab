#cloud-config
# https://cloudinit.readthedocs.io/en/latest/topics/examples.html
users:
  - name: jhughes
    primary_group: jhughes
    groups: wheel
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
     - "ssh-rsa  jhughes@NOIR (WSL2)"
     - "ssh-rsa  jhughes - mac"
fqdn: ${hostname}
packages:
  - bind-utils
  - firewalld
runcmd:
  - systemctl enable --now firewalld
  - yum update \-y
  - reboot
