---
# Firewall variables
open_firewall_ports:
  - 9092/tcp # kafka listener port

consul_services:
  - name: "node-metrics"
    tags:
      - "node exporter"
      - "monitoring"
      - "metrics"
    port: "9100"
    checks:
      - name: 
        http: "http://localhost:9100/metrics"
        interval: "15s"
        timeout: "3s"
  - name: "kafka"
    tags:
      - "kafka"
    checks:
      - name:
        tcp: "localhost:9092"
        interval: "15s"
        timeout: "3s"
